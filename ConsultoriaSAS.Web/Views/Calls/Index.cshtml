@model IEnumerable<ConsultoriaSAS.Entity.Entities.Call>

@{
    ViewBag.Title = "Index";
}

@Html.Partial("_ModalPage")


<div class="table-responsive">
    <table class="table table-bordered table-condensed table-striped table-hover sortable">

        <thead>
            <tr style="  background-color: #343c44">
                <th style="text-align: center ; ">
                    <font color="#fff">
                        Nombre
                    </font>
                </th>
                <th style="text-align: center ; ">
                    <font color="#fff">
                        Descripción
                    </font>
                </th>
                <th style="text-align: center ; ">
                    <font color="#fff">
                        Fecha Registro
                    </font>
                </th>
                <th style="text-align: center ; ">
                    <font color="#fff">
                        Acciones
                    </font>
                </th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td class="table-active" style="text-align: center">

                    @Html.DisplayFor(modelItem => item.Customers.Name)
                </td>
                <td class="table-active" style="text-align: center">

                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td class="table-active" style="text-align: center">

                    @Html.DisplayFor(modelItem => item.DateRegister)
                </td>
                <td class="table-active" style="text-align: center">
                    @Html.ActionLink("Editar", "Edit", new { id = item.CallId }, new { @class = "btn btn btn-dark" })
                    @Html.ActionLink("Detalle", "Details", new { id = item.CallId }, new { @class = "btn btn btn-dark" })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.CallId }, new { @class = "btn btn btn-dark" })
                </td>
            </tr>
        }

    </table>
</div>
@section scripts
{

    <script src="~/Scripts/ViewModal/Calls.js"></script>

}