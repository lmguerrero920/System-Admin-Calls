
@model ConsultoriaSAS.Web.ModelView.UserView


@{
    ViewBag.Title = "Roles";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Roles para el usuario : @Model.Name</h2>


<p>
    @Html.ActionLink("Adicionar Rol", "AddRole",
    new { userID = Model.UserId }, new { @class = "btn btn-primary" })

    @Html.ActionLink("Regresar", "Index",
    new { }, new { @class = "btn btn-info" })

</p>
<table class="table">

    @for (int i = 0; i < Model.Roles.Count; i++)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.Roles[i].Name)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { userID = Model.UserId, roleID = Model.Roles[i].RoleId }, new { @class = "btn btn-Danger" })
            </td>
        </tr>
    }

</table>


